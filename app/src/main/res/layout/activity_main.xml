<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.anora.kristenklock.MainActivity"
    android:orientation="vertical"
    android:screenOrientation="portrait">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TimePicker>

    <!--<SeekBar-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_width="150dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/timePicker"-->
        <!--android:layout_marginTop="40dp"/>-->

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left|start"
            android:layout_margin="16dp"
            app:layout_anchorGravity="bottom|right|end"
            android:src="@drawable/ic_settings_white_24dp"
            android:onClick="showCalibrationDialog"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="16dp"
            app:layout_anchorGravity="bottom|center"
            android:src="@drawable/ic_alarm_add_white_24dp"
            android:onClick="setAlarm"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|end"
            android:layout_margin="16dp"
            app:layout_anchorGravity="bottom|right|end"
            android:src="@drawable/ic_list_white_36dp"
            android:onClick="launchAlarmsList"/>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
